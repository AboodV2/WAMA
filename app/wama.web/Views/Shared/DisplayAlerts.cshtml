@using WAMA.Web.Model

@if (ViewData.ContainsKey(Constants.SUCCESS_MESSAGES))
{
    <div class="form-group col-xs-12"  id="@Constants.SUCCESS_MESSAGES">
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @foreach (var message in (ViewData[Constants.SUCCESS_MESSAGES] as IEnumerable<string>))
            {
                <strong>@message</strong><br />
            }
        </div>
    </div>
}

@if (ViewData.ContainsKey(Constants.ERROR_MESSAGES))
{
    <div class="form-group col-xs-12" id="@Constants.ERROR_MESSAGES">
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @foreach (var error in (ViewData[Constants.ERROR_MESSAGES] as IEnumerable<string>))
            {
                <p>@error</p><br />
            }
        </div>
    </div>
}
