@using WAMA.Core.ViewModel

@model ReportToolFilterViewModel

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <form asp-antiforgery="true" method="post">
        <div class="form-group col-xs-12" asp>
            <label asp-for="StartDate"> </label>
            <input asp-for="StartDate" class="form-control" />
        </div>
        <div class="form-group col-xs-12" asp>
            <label asp-for="EndDate"> </label>
            <input asp-for="EndDate" class="form-control" />
        </div>
        <div class="form-group col-xs-12" asp>
            <label asp-for="ReportGranularity"> </label>
            <select asp-for="ReportGranularity" asp-items="@Html.GetEnumSelectList<ReportGranularity>()" class="form-control"></select>
        </div>
        <input type="hidden" asp-for="ActiveTool" />
        <div class="form-group col-xs-12" asp>
            <button type="submit" class="btn btn-lg btn-success">Generate Report</button>
        </div>
    </form>
</div>