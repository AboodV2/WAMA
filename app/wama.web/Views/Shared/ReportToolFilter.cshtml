@model WAMA.Core.ViewModel.ReportToolFilterViewModel

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <form asp-antiforgery="true" method="post">
        <div class="form-group col-xs-12" asp>
            <label asp-for="StartDate"> </label>
            <input asp-for="StartDate" class="form-control" />
        </div>
        <div class="form-group col-xs-12" asp>
            <label asp-for="EndDate"> </label>
            <input asp-for="EndDate" class="form-control" />
        </div>
        <input type="hidden" asp-for="ActiveTool" value="@ViewData[WAMA.Web.Model.Constants.ADMIN_CONSOLE_ACTIVE_TOOL]" />
        <div class="form-group col-xs-12" asp>
            <button type="submit" class="btn btn-lg btn-success">View Report</button>
            <button type="submit" class="btn btn-lg btn-success" asp-action="DownloadCSV">Download .csv</button>
        </div>
    </form>
</div>