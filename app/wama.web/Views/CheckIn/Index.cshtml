@{
}
@Html.Partial("DisplayError")
<div class="vertical-align-element clear-both">
    <div class="horizontal-align-element">

        <form method="post" class="inline-block">

            <div class="form-group col-xs-12">
                <input type="text"
                       class="form-control"
                       name="memberId"
                       id="check-in-user-id"
                       placeholder="Please enter your ID"
                       pattern="[0-9]{7}"
                       title="7 digit long numbers only!" />
            </div>

            <div class="form-group col-xs-12">
                <input type="submit" class="btn btn-lg btn-primary big-action-button" value="Check In" />
            </div>
            <br />
            <br />
            <br />
            <script>
                     var IsNull = '@ViewBag.IsNull';
                     var CurrentLoc = window.location.href;
                     var link = document.createElement('a');
                     if (IsNull == "yes")
                     {
                         link.setAttribute('href', CurrentLoc + "Patron/Create");
                         link.innerHTML = "Create New Account"
                         document.body.appendChild(link);
                     }
            </script>
        </form>
    </div>
</div>