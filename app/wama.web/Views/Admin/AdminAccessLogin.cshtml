@{
    @using WAMA.Core.Models.DTOs;

    @model WAMA.Core.ViewModel.LogInCredentialViewModel
    string memberId = (Model?.MemberId) ?? ViewBag.MemberId;
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

    @Html.Partial("DisplayError")
    <form asp-action="@nameof(WAMA.Web.Controllers.AdminController.AdminAccessLogin)" asp-antiforgery="true" method="post">
        <div class="form-group col-xs-12">
            <label asp-for="MemberId"> </label>
            <input asp-for="MemberId"
                   class="form-control"
                   pattern="[0-9]{7}"
                   title="Member ID must be in number and 7 digit long."
                   value="@memberId" />
        </div>
        <div class="form-group col-xs-12">
            <label asp-for="HashedPassword" class="required"></label>
            <input asp-for="HashedPassword" class="form-control" pattern="^(.){6,}$" title="" />
            <span asp-validation-for="HashedPassword" class="text-danger"></span>
        </div>

        <div class="form-group col-xs-12" asp>
            <button type="submit" class="btn btn-lg btn-success">Log In</button>
        </div>
    </form>
</div>